#include<stdio.h>

void area_peri(float, float*, float*);
  
int main() {	float r, area, peri;
    scanf("%f", &r);

    area_peri(r, &area, &peri);

    printf("%.2f\n", area);
    printf("%.2f\n", peri);

    return 0;
	
}

void area_peri(float r , float *a , float *p        ) {
	*a = 3.14 * r * r;
    *p = 2 * 3.14 * r;
	
	
}
